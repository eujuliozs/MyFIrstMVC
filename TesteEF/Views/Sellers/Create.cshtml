@model TesteEF.Models.ViewModel.SellerFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["title"]</h1>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            
            <div class="form-group row">
                <label asp-for="Seller.Name" class="form-control-plaintext"></label>
                <input asp-for="Seller.Name"/>
                <span asp-validation-for="Seller.Name"></span>
            </div> 
            
            <div class="form-group row">
                <label asp-for="Seller.Email" class="form-control-plaintext"></label>
                <input asp-for="Seller.Email" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div> 
            
            <div class="form-group row">
                <label asp-for="Seller.BirthDate" class="form-control-plaintext"></label>
                <input asp-for="Seller.BirthDate" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>
            
            <div class="form-group row">
                <label asp-for="Seller.BaseSalary" class="form-control-plaintext"></label>
                <input asp-for="Seller.BaseSalary" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label"></label>
                <select asp-for="Seller.DepartmentId" asp-items=
                "@(new SelectList(Model.Departments,"Id","Name"))" class="form-control"></select>

            </div>
            <hr />
            <div class="form-group row">
                <input type="submit" value="Create" class="btn btn-dark"/>
            </div>
            
        </form>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
